{
	"name": "@yuna0x0/svelte-neko",
	"description": "A Svelte 5 port of oneko.js - an adorable cat that chases your mouse cursor around the screen",
	"license": "MIT",
	"version": "0.2.0",
	"keywords": [
		"svelte",
		"oneko",
		"cat",
		"cursor",
		"animation"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/yuna0x0/svelte-neko.git"
	},
	"contributors": [
		"Stanislav Khromov <stanislav.khromov+github@gmail.com>",
		"yuna0x0 <yuna@yuna0x0.com>"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "svelte-kit sync && vite build && pnpm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "pnpm run package",
		"test": "pnpm run test:integration && pnpm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"svelte": "^5.38.2"
	},
	"devDependencies": {
		"@eslint/js": "^9.33.0",
		"@playwright/test": "^1.55.0",
		"@sveltejs/adapter-auto": "^6.1.0",
		"@sveltejs/adapter-static": "^3.0.9",
		"@sveltejs/kit": "^2.35.0",
		"@sveltejs/package": "^2.5.0",
		"@sveltejs/vite-plugin-svelte": "^6.1.3",
		"@testing-library/jest-dom": "^6.7.0",
		"@testing-library/svelte": "^5.2.8",
		"@types/eslint": "^9.6.1",
		"@typescript-eslint/eslint-plugin": "^8.40.0",
		"@typescript-eslint/parser": "^8.40.0",
		"eslint": "^9.33.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.11.0",
		"jsdom": "^26.1.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"publint": "^0.3.12",
		"rollup-plugin-visualizer": "^6.0.3",
		"svelte": "^5.38.2",
		"svelte-check": "^4.3.1",
		"svelte-eslint-parser": "^1.3.1",
		"tslib": "^2.8.1",
		"typescript": "^5.9.2",
		"vite": "^7.1.3",
		"vitest": "^3.2.4"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"packageManager": "pnpm@10.15.0+sha512.486ebc259d3e999a4e8691ce03b5cac4a71cbeca39372a9b762cb500cfdf0873e2cb16abe3d951b1ee2cf012503f027b98b6584e4df22524e0c7450d9ec7aa7b"
